<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/beerNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:text="TextView"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/beerImage"
        android:src="@mipmap/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/beerNameView"
        android:layout_alignStart="@+id/beerNameView"
        android:layout_below="@+id/beerNameView"
        android:layout_marginTop="30dp"
        android:text="@string/beer_type" />

    <TextView
        android:id="@+id/typeBeerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/type_text"
        android:layout_alignStart="@+id/type_text"
        android:layout_below="@+id/type_text"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/typeBeerView"
        android:layout_alignStart="@+id/typeBeerView"
        android:layout_below="@+id/typeBeerView"
        android:layout_marginTop="16dp"
        android:text="@string/beer_colour" />

    <TextView
        android:id="@+id/colourBeerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/colourBeerView"
        android:layout_alignStart="@+id/colourBeerView"
        android:layout_below="@+id/colourBeerView"
        android:layout_marginTop="16dp"
        android:text="@string/beer_flavour" />

    <TextView
        android:id="@+id/flavourBeer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/flavourBeer"
        android:layout_alignStart="@+id/flavourBeer"
        android:layout_below="@+id/flavourBeer"
        android:layout_marginTop="16dp"
        android:text="@string/beer_ingredients" />

    <TextView
        android:id="@+id/ingredientsBeerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:text="To be added and implemented"
        android:textSize="18sp" />
</RelativeLayout>