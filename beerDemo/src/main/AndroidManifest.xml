<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.deustotech.beerclipsdemo"
    android:versionCode="1"
    android:versionName="1.0"
    android:testOnly="false">

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/beer_icon_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name="eu.deustotech.beerclipsdemo.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eu.deustotech.beerclipsdemo.ShowBeer"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="eu.deustotech.beerclipsdemo.DebugActivity"
            android:label="Debug register"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>